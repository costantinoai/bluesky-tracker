{
  "dashboard": {
    "title": "Bluesky Tracker Metrics",
    "tags": ["bluesky", "social", "analytics"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Follower Count",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "bluesky_follower_count",
            "legendFormat": "Followers",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"label": "Count", "show": true},
          {"show": true}
        ]
      },
      {
        "id": 2,
        "title": "Following Count",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "bluesky_following_count",
            "legendFormat": "Following",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Unfollowers (30d)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "bluesky_unfollowers_30d",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "textMode": "value_and_name"
        }
      },
      {
        "id": 4,
        "title": "Non-Mutual Following",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 8},
        "targets": [
          {
            "expr": "bluesky_non_mutual_following",
            "refId": "A"
          }
        ]
      },
      {
        "id": 5,
        "title": "Followers Only",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "bluesky_followers_only",
            "refId": "A"
          }
        ]
      },
      {
        "id": 6,
        "title": "API Request Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "rate(bluesky_api_requests_total[5m])",
            "legendFormat": "{{endpoint}} - {{status}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 7,
        "title": "Collection Duration",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "bluesky_collection_duration_seconds",
            "legendFormat": "Duration",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Seconds", "show": true},
          {"show": true}
        ]
      }
    ]
  }
}
